<Window x:Class="GUI.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d" Background="#ddd"
        Title="SelectionWindow" Height="Auto" Width="Auto"  Unloaded="Window_Unloaded">
    <!-- 
    /////////////////////////////////////////////////////////////////////
    // SelectionWindow.xaml                                            //
    //                                                                 //
    // Abinav Murugadass, CSE687                                       //
    /////////////////////////////////////////////////////////////////////
  -->
    <Grid Margin="10" Background="white">
        <TextBox x:Name="CodeSelection" FontFamily="tahoma" Margin="10" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ></TextBox>
    </Grid>
</Window>
